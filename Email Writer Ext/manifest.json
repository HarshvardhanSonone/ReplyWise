{
  "name": "Email Writer",
  "description": "AI Email Reply Generator",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["*http://localhost:8080/*","*://mail.google.com/*"],
  "action": {
    "default_title": "Email Writer" 
    
  },

   "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [ "*://mail.google.com/*"],
      "css": ["content.css"],
    "run_at": "document_end"
    }
  ],

  
  "web_accessible_resources": [
    {
      "resources": [ "icons/*" ],
      "matches": [ "*://mail.google.com/*" ]
    }
      
  ]
}

